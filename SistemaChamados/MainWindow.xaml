<Window x:Class="SistemaChamados.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SistemaChamados.ViewModels"
        xmlns:Menu="clr-namespace:SistemaChamados.Helpers"
        
        mc:Ignorable="d"
        Title="Sistema de Chamados"
        MinWidth="800"
        MinHeight="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.DataContext>
        <vm:NavigationVM />
    </Window.DataContext>

    <Grid>
        <!-- Fundo com borda arredondada -->
        <Border Background="{StaticResource LoginGradient}" CornerRadius="20" />

        <!-- Layout principal -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Menu lateral -->
            <Grid Width="228" HorizontalAlignment="Left">
                <Border Background="Purple" CornerRadius="20,0,0,20" />

                <StackPanel Margin="10">
                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding HomeCommand}"
                              IsChecked="True">
                        <Grid>
                            <Image Source="/Resources/home.png"
                                   Style="{StaticResource Image_Style}" />
                            <TextBlock Text="Home"
                                       Style="{StaticResource Text_Style}" />
                        </Grid>
                    </Menu:Btn>

                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding TicketsCommand}">
                        <Grid>
                            <Image Source="/Resources/ticket.png"
                                   Style="{StaticResource Image_Style}" />
                            <TextBlock Text="Tickets"
                                       Style="{StaticResource Text_Style}" />
                        </Grid>
                    </Menu:Btn>


                    <Menu:Btn Style="{StaticResource BtnStyle}"
                         Command="{Binding HistoricoCommand}" >
                        <Grid>
                            <Image Source="/Resources/ticket.png"
                         Style="{StaticResource Image_Style}" />
                            <TextBlock Text="Histórico de Tickets"
                         Style="{StaticResource Text_Style}" />
                        </Grid>
                    </Menu:Btn>

                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding UsuarioCommand}" >
                        <Grid>
                            <Image Source="/Resources/user.png"
                                   Style="{StaticResource Image_Style}" />
                            <TextBlock Text="Perfil"
                                       Style="{StaticResource Text_Style}" />
                        </Grid>
                    </Menu:Btn>


                </StackPanel>
            </Grid>

            <!-- Conteúdo principal com rolagem -->
            <ScrollViewer Grid.Column="1"
                          Margin="20"
                          VerticalScrollBarVisibility="Auto">
                <ContentControl x:Name="Pages"
                                Content="{Binding CurrentView}" />
            </ScrollViewer>
        </Grid>

        <StackPanel Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Top">

            <!-- Minimizar -->
            <Button Width="40" Height="40"
            Style="{StaticResource MinApp}"
            ToolTip="Minimizar"
            Click="Minimize_Click" />

            <!-- Maximizar/Restaurar -->
            <!--<Button Width="40" Height="40"
            Background="{StaticResource close_app_def}"
            ToolTip="Maximizar/Restaurar"
            Click="MaximizeRestore_Click" /> -->

            <!-- Fechar -->
            <Button Width="40" Height="40"
            Style="{StaticResource ExitApp}"
            ToolTip="Fechar"
            Click="CloseApp_Click" />
        </StackPanel>
    </Grid>
</Window>