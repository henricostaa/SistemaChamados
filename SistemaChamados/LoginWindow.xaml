<Window x:Class="SistemaChamados.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Inovatech"
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent">

    <Grid>
        <!-- Cartão de login -->
        <Border Width="400" Height="450"
                Background="{StaticResource LoginGradient}"
                CornerRadius="16"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="30"
                Effect="{StaticResource CardShadow}">

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >

                <!-- Título -->
                <TextBlock Text="🔐 Inovatech"
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Campo Usuario -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Usuário" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                    <Border CornerRadius="6" BorderBrush="#CE93D8" BorderThickness="1" Background="#F3E5F5">
                        <TextBox x:Name="txtUsuario"
                                 Height="35"
                                 FontSize="14" 
                                 Padding="8"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="#4A148C"                
                                 CaretBrush="#4A148C"/>
                    </Border>
                </StackPanel>

                <!-- Campo Senha -->
                <StackPanel Margin="0,0,0,30">
                    <TextBlock Text="Senha" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                    <Border CornerRadius="6" BorderBrush="#CE93D8" BorderThickness="1" Background="#F3E5F5">
                        <PasswordBox x:Name="txtSenha"
                     Height="35"
                     FontSize="14"
                     Padding="8"
                     Background="Transparent"
                     BorderThickness="0"
                     Foreground="#4A148C"
                     CaretBrush="#4A148C"/>
                    </Border>
                </StackPanel>

                <!-- Botão Entrar -->
                <Button Content="Entrar"
                        Width="160" Height="35"
                        Style="{StaticResource ModernLoginButton}"
                        Click="Entrar_Click" />

            </StackPanel>

        </Border>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top">

            <!-- Minimizar -->
            <Button Width="40" Height="40"
                    Style="{StaticResource MinApp}"
                    ToolTip="Minimizar"
                    Click="Minimize_Click" />

            <!-- Maximizar/Restaurar -->
            <!--<Button Width="40" Height="40"
                        Background="{StaticResource close_app_def}"
                        ToolTip="Maximizar/Restaurar"
                        Click="MaximizeRestore_Click" /> -->

            <!-- Fechar -->
            <Button Width="40" Height="40"
                    Style="{StaticResource ExitApp}"
                    ToolTip="Fechar"
                    Click="CloseApp_Click" />
        </StackPanel>
    </Grid>
</Window>