<Window x:Class="SistemaChamados.Views.MostrarDetalhesPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalhes do Chamado"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <!-- Fundo escurecido transparente -->
    <Grid Background="Transparent">
        <!-- Conteúdo centralizado -->
        <Border Background="#6A0DAD"
                CornerRadius="15"
                Padding="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <Border.Effect>
                <DropShadowEffect Color="Transparent" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Detalhes do Ticket"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <!-- Campos -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Título:" Foreground="White" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding ChamadoSelecionado.Titulo}" Foreground="White" Grid.Column="1"/>
                </Grid>
                
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Descrição:" Foreground="White" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding ChamadoSelecionado.Descricao}" Foreground="White" Grid.Column="1"/>
                </Grid>
                
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Categoria:" Foreground="White" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding ChamadoSelecionado.Categoria}" Foreground="White" Grid.Column="1"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Prioridade:" Foreground="White" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding ChamadoSelecionado.Prioridade}" Foreground="White" Grid.Column="1"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Status:" Foreground="White" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding ChamadoSelecionado.Status}" Foreground="White" Grid.Column="1"/>
                </Grid>

                <!-- Outros campos omitidos para brevidade -->

                <!-- Botão de fechar -->                <Button Content="Fechar"                        Width="100"                        Style="{StaticResource ModernLoginButton}"                        Cursor="Hand"                        Click="CloseApp_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>