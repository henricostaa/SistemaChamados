<Window x:Class="SistemaChamados.Views.MostrarDetalhesPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaChamados.Views"
        mc:Ignorable="d"
        Title="MostrarDetalhesPopup" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Grid Margin="20">
        <Border Background="#6A0DAD" CornerRadius="15" Padding="20" >
            <StackPanel>
                <!-- Título -->
                <TextBlock Text="Detalhes do Ticket"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

                <!-- Informações principais -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Título:" Foreground="White" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding Titulo}" Foreground="White" Grid.Column="1"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Descrição:" Foreground="White" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding Descricao}" Foreground="White" Grid.Column="1" TextWrapping="Wrap"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Categoria:" Foreground="White" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding Categoria}" Foreground="White" Grid.Column="1"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Prioridade:" Foreground="White" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding Prioridade}" Foreground="White" Grid.Column="1"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Status:" Foreground="White" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding Status}" Foreground="White" Grid.Column="1"/>
                </Grid>

                <!-- Botão de voltar -->
                <Button Content="Fechar"
                    Width="100"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"
                    Style="{StaticResource ModernLoginButton}"
                    Cursor="Hand"
                    Click="CloseApp_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
