<UserControl x:Class="SistemaChamados.Views.HistoricoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:SistemaChamados.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="772">

    <UserControl.DataContext>
        <vm:HistoricoVM />
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <TextBlock Grid.Row="0"
                   Text="📂 Histórico de Chamados"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,20" />

        <!-- Filtros -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
            <GroupBox Header="Status" Margin="0,0,20,0">
                <ComboBox Width="150"
                          SelectedValue="{Binding FiltroStatus, Mode=TwoWay}"
                          SelectedValuePath="Content">
                    <ComboBoxItem Content="Todos" />
                    <ComboBoxItem Content="Aberto" />
                    <ComboBoxItem Content="Em Andamento" />
                    <ComboBoxItem Content="Concluído" />
                    <ComboBoxItem Content="Rejeitado" />
                </ComboBox>
            </GroupBox>

            <GroupBox Header="Prioridade" Margin="0,0,20,0">
                <ComboBox Width="150"
                          SelectedValue="{Binding FiltroPrioridade, Mode=TwoWay}"
                          SelectedValuePath="Content">
                    <ComboBoxItem Content="Todas" />
                    <ComboBoxItem Content="Urgente" />
                    <ComboBoxItem Content="Alta" />
                    <ComboBoxItem Content="Média" />
                    <ComboBoxItem Content="Baixa" />
                </ComboBox>
            </GroupBox>

            <GroupBox Header="Período" Margin="0,0,20,0">
                <ComboBox Width="150"
                          SelectedValue="{Binding FiltroPeriodo, Mode=TwoWay}"
                          SelectedValuePath="Content">
                    <ComboBoxItem Content="Todo Período" />
                    <ComboBoxItem Content="Últimos 7 Dias" />
                    <ComboBoxItem Content="Últimos 30 Dias" />
                </ComboBox>
            </GroupBox>

            <!-- Botão Aplicar Filtros -->
            <Button Content="Aplicar Filtros"
                    Command="{Binding AplicarFiltrosCommand}"
                    Width="150"
                    Height="35"
                    Margin="0,0,20,0"
                    Background="#4B0082"
                    Foreground="White"
                    FontWeight="Bold" />
        </StackPanel>

        <!-- Lista de Chamados -->

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding ChamadosFiltrados}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" ItemWidth="180" ItemHeight="Auto" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="8" Margin="10" Padding="10" Background="White" Width="160">
                             <Border.Effect>
                                <DropShadowEffect Color="Black"
                                                  BlurRadius="8"
                                                  ShadowDepth="2"
                                                  Opacity="0.2">
                                    
                                </DropShadowEffect>
                            </Border.Effect> 
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="#DDD"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="Aberto">
                                            <Setter Property="BorderBrush" Value="Red"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Em Andamento">
                                            <Setter Property="BorderBrush" Value="Goldenrod"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Concluído">
                                            <Setter Property="BorderBrush" Value="Green"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <StackPanel>
                                <TextBlock Text="{Binding Titulo}" FontSize="14" FontWeight="Bold" TextWrapping="Wrap" Foreground="Purple"/>
                                <Border CornerRadius="4" Padding="4,2" Margin="0,5,0,0" HorizontalAlignment="Left">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#EEE"/>
                                            <Setter Property="BorderBrush" Value="#CCC"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Prioridade}" Value="Baixa">
                                                    <Setter Property="Background" Value="#E8F5E9"/>
                                                    <!-- Verde claro -->
                                                    <Setter Property="BorderBrush" Value="Green"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Prioridade}" Value="Média">
                                                    <Setter Property="Background" Value="#FFFDE7"/>
                                                    <!-- Amarelo muito claro -->
                                                    <Setter Property="BorderBrush" Value="Orange"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Prioridade}" Value="Alta">
                                                    <Setter Property="Background" Value="#FFEBEE"/>
                                                    <!-- Vermelho claro -->
                                                    <Setter Property="BorderBrush" Value="Red"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Prioridade}" Value="Urgente">
                                                    <Setter Property="Background" Value="#FDECEA"/>
                                                    <!-- Vermelho bem claro -->
                                                    <Setter Property="BorderBrush" Value="DarkRed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <TextBlock Text="{Binding Prioridade}"
               FontSize="12"
               FontWeight="SemiBold"
               Foreground="Black"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
                                </Border>


                                <Border CornerRadius="4" Padding="4,2" Margin="0,5,0,0" HorizontalAlignment="Left">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#EEE"/>
                                            <Setter Property="BorderBrush" Value="#CCC"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Aberto">
                                                    <Setter Property="Background" Value="#FFEBEE"/>
                                                    <!-- Rosa claro -->
                                                    <Setter Property="BorderBrush" Value="#C62828"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Em Andamento">
                                                    <Setter Property="Background" Value="#FFF3E0"/>
                                                    <!-- Laranja claro -->
                                                    <Setter Property="BorderBrush" Value="#EF6C00"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Concluído">
                                                    <Setter Property="Background" Value="#E8F5E9"/>
                                                    <!-- Verde claro -->
                                                    <Setter Property="BorderBrush" Value="#2E7D32"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <TextBlock Text="{Binding Status}"
               FontSize="12"
               FontWeight="SemiBold"
               Foreground="Black"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
                                </Border>


                                <TextBlock Text="{Binding Solicitante.Username}" FontSize="12" />

                                <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                                    <!-- Atender -->
                                    <Button Content="Atender"
                                    Command="{Binding DataContext.AtenderChamadoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}" Margin="0,0,0,5">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Aberto">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <!-- Concluir -->
                                    <Button Content="Concluir"
                                    Command="{Binding DataContext.ConcluirChamadoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}" Margin="0,0,0,5">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Aberto">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Em Andamento">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <!-- Mostrar Detalhes -->
                                    <Button Content="Mostrar Detalhes"
                                    Command="{Binding DataContext.MostrarDetalhesCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
    
</UserControl>
