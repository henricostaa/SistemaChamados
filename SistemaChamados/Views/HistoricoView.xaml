<UserControl x:Class="SistemaChamados.Views.HistoricoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:SistemaChamados.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="772">
    
    <UserControl.Resources>
        <!-- Gradiente de fundo -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1E0140" Offset="0"/>
            <GradientStop Color="#2E004F" Offset="1"/>
        </LinearGradientBrush>

        <!-- Estilo para campos de entrada -->
        <Style x:Key="RoundedInput" TargetType="Control">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Background" Value="#3F0A6B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#6A0DAD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
           
        </Style>

        <!-- Estilo para botão -->
        <Style x:Key="PurpleButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="#A020F0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B84DFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:HistoricoVM />
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <TextBlock Grid.Row="0"
                   Text="📂 Histórico de Chamados"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,20" />

        <!-- Filtros -->
        <Border
            Grid.Row="1"
                CornerRadius="10"
                Background="#6A0DAD"
                Padding="10"
                
                Width="680"
                BorderBrush="White"
                BorderThickness="1">

            <DockPanel  HorizontalAlignment="Left"
            Background="#6A0DAD"
                         >

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                    <TextBlock Text="Status:"
                               FontSize="12"
                               
                               Foreground="White"
                               
                               />
                    

                    <ComboBox Style="{StaticResource RoundedComboBox}" Width="150"
                              Margin="0,0,10,0"
                              VerticalAlignment="Center"
                              
                   
                   SelectedValue="{Binding FiltroStatus, Mode=TwoWay}"
                   SelectedValuePath="Content">
                        <ComboBoxItem Content="Todos" />
                        <ComboBoxItem Content="Aberto" />
                        <ComboBoxItem Content="Em Andamento" />
                        <ComboBoxItem Content="Fechado" />
                        <ComboBoxItem Content="Rejeitado" />
                    </ComboBox>
                </StackPanel>

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Prioridade:"
                        FontSize="12"
            
                        Foreground="White"
            
                                             />
                    <ComboBox Style="{StaticResource RoundedComboBox}" Width="150"
                              Margin="0,0,10,0"
                   SelectedValue="{Binding FiltroPrioridade, Mode=TwoWay}"
                   SelectedValuePath="Content">
                        <ComboBoxItem Content="Todas" />
                        <ComboBoxItem Content="Urgente" />
                        <ComboBoxItem Content="Alta" />
                        <ComboBoxItem Content="Média" />
                        <ComboBoxItem Content="Baixa" />
                    </ComboBox>
                </StackPanel>

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Período:"
                               FontSize="12"
            
                               Foreground="White"
            
                                                        />
                    <ComboBox Style="{StaticResource RoundedComboBox}" Width="150"
                   SelectedValue="{Binding FiltroPeriodo, Mode=TwoWay}"
                   SelectedValuePath="Content">
                        <ComboBoxItem Content="Todo Período" />
                        <ComboBoxItem Content="Últimos 7 Dias" />
                        <ComboBoxItem Content="Últimos 30 Dias" />
                    </ComboBox>
                </StackPanel>

                <!-- Botão Aplicar Filtros -->
                <StackPanel Width="200">
                    <Button Content="Aplicar Filtros"
             Command="{Binding AplicarFiltrosCommand}"
             Style="{StaticResource PurpleButton}"
             Background="MediumPurple"
             Width="150"
             Height="35"
                            Margin="0,15,0,0"
                            />
                </StackPanel>
            </DockPanel>

        </Border>
        
       

        <!-- Lista de Chamados -->

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding ChamadosFiltrados}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" ItemWidth="180" ItemHeight="Auto" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="8" Margin="10" Padding="10" Background="#6A0DAD" Width="160">
                             <Border.Effect>
                                <DropShadowEffect Color="Black"
                                                  BlurRadius="8"
                                                  ShadowDepth="2"
                                                  Opacity="0.2">
                                    
                                </DropShadowEffect>
                            </Border.Effect> 
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="#DDD"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="Aberto">
                                            <Setter Property="BorderBrush" Value="Red"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Em Andamento">
                                            <Setter Property="BorderBrush" Value="Goldenrod"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Concluído">
                                            <Setter Property="BorderBrush" Value="Green"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <StackPanel>
                                <TextBlock Text="{Binding Titulo}" FontSize="14" FontWeight="Bold" TextWrapping="Wrap" Foreground="White"/>
                                <Border CornerRadius="4" Padding="4,2" Margin="0,5,0,0" HorizontalAlignment="Left">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#EEE"/>
                                            <Setter Property="BorderBrush" Value="#CCC"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Prioridade}" Value="Baixa">
                                                    <Setter Property="Background" Value="#E8F5E9"/>
                                                    <!-- Verde claro -->
                                                    <Setter Property="BorderBrush" Value="Green"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Prioridade}" Value="Média">
                                                    <Setter Property="Background" Value="#FFFDE7"/>
                                                    <!-- Amarelo muito claro -->
                                                    <Setter Property="BorderBrush" Value="Orange"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Prioridade}" Value="Alta">
                                                    <Setter Property="Background" Value="#FFEBEE"/>
                                                    <!-- Vermelho claro -->
                                                    <Setter Property="BorderBrush" Value="Red"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Prioridade}" Value="Urgente">
                                                    <Setter Property="Background" Value="#FDECEA"/>
                                                    <!-- Vermelho bem claro -->
                                                    <Setter Property="BorderBrush" Value="DarkRed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <TextBlock Text="{Binding Prioridade}"
               FontSize="12"
               FontWeight="SemiBold"
               Foreground="Black"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
                                </Border>


                                <Border CornerRadius="4" Padding="4,2" Margin="0,5,0,0" HorizontalAlignment="Left">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#EEE"/>
                                            <Setter Property="BorderBrush" Value="#CCC"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Aberto">
                                                    <Setter Property="Background" Value="#FFEBEE"/>
                                                    <!-- Rosa claro -->
                                                    <Setter Property="BorderBrush" Value="#C62828"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Em Andamento">
                                                    <Setter Property="Background" Value="#FFF3E0"/>
                                                    <!-- Laranja claro -->
                                                    <Setter Property="BorderBrush" Value="#EF6C00"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Concluído">
                                                    <Setter Property="Background" Value="#E8F5E9"/>
                                                    <!-- Verde claro -->
                                                    <Setter Property="BorderBrush" Value="#2E7D32"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <TextBlock Text="{Binding Status}"
                                         FontSize="12"
                                         FontWeight="SemiBold"
                                         Foreground="Black"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                                </Border>


                                <TextBlock Foreground="White" Text="{Binding Solicitante.Username}" FontSize="12"
                                           Margin="5"/>

                                <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                                    <!-- Atender -->
                                    <Button Content="Atender"
                                    Command="{Binding DataContext.AtenderChamadoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}" Margin="0,0,0,5"
                                            Style="{StaticResource BotaoAtenderStyle}"
                                            Height="25"
                                            FontSize="12"
                                            Width="auto">
                                        
                                       


                                    </Button>

                                    <!-- Concluir -->
                                    <Button Content="Concluir"
                                    Command="{Binding DataContext.ConcluirChamadoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}" Margin="0,0,0,5"
                                             Style="{StaticResource BotaoConcluirStyle}"
                                             Height="25"
                                             FontSize="12"
                                             Width="auto">
                                        
                                    </Button>

                                    <!-- Mostrar Detalhes -->
                                    <Button Content="Mostrar Detalhes"
                                    Command="{Binding DataContext.MostrarDetalhesCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                             Style="{StaticResource ModernLoginButton}"
                                             Height="25"
                                             FontSize="12"
                                             Width="auto"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
    
</UserControl>
