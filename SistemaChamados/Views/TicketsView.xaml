<UserControl x:Class="SistemaChamados.Views.TicketsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:SistemaChamados.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="772"
             Style="{StaticResource Page_Style}">

            <UserControl.DataContext>
                <vm:TicketsVM />
            </UserControl.DataContext>
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="2.5*" />
        </Grid.ColumnDefinitions>

        <!-- 📝 Formulário de Criação -->
        <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20" Margin="10"
                Effect="{StaticResource CardShadow}">
            <StackPanel>
                <TextBlock Text="Criar Novo Ticket" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,20" />


                <StackPanel>
                    <TextBlock Text="Titulo" FontSize="14" Margin="0,0,0,5"/>
                    <Border CornerRadius="6" BorderBrush="#CE93D8" BorderThickness="1" Background="#F3E5F5">
                        <TextBox Text="{Binding Titulo}"                            
                 Height="35"
                 FontSize="14" 
                 Padding="8"
                 Background="Transparent"
                 BorderThickness="0"
                 Foreground="#4A148C"                
                 CaretBrush="#4A148C"/>
                    </Border>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Descrição"  FontSize="14" Margin="0,0,0,5"/>
                    <Border CornerRadius="6" BorderBrush="#CE93D8" BorderThickness="1" Background="#F3E5F5">
                        <TextBox Text="{Binding Descricao}"
                 Height="80"
                 AcceptsReturn="True"                
                 FontSize="14" 
                 Padding="8"
                 Background="Transparent"
                 BorderThickness="0"
                 Foreground="#4A148C"                
                 CaretBrush="#4A148C"/>
                    </Border>
                </StackPanel>
                
                <StackPanel>
                    <TextBlock Text="Categoria" FontSize="14" Margin="0,10,0,10"/>
                    <ComboBox ItemsSource="{Binding Categorias}"
          SelectedItem="{Binding Categoria}"
                              
          Height="35"
          
          Margin="0,0,0,10"/>
                </StackPanel>



                <StackPanel>
                    <TextBlock Text="Prioridade" FontSize="14" Margin="0,10,0,10"/>
                    <ComboBox ItemsSource="{Binding Prioridades}"
                            SelectedItem="{Binding Prioridade}"
                          
                              
                                
                                Height="35"
                                
                                Margin="0,0,0,10"/>
                </StackPanel>
                

                <Button Content="Criar Ticket"
                        Command="{Binding CriarChamadoCommand}"
                        Width="160" Height="35"
                        Style="{StaticResource ModernLoginButton}"
                        
                         />
            </StackPanel>
        </Border>

        <!-- 📋 Lista de Tickets Criados -->
        <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="20" Margin="10"
                Effect="{StaticResource CardShadow}">
            <StackPanel>
                <TextBlock Text="Tickets Criados" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,20" />

                <ListBox ItemsSource="{Binding Chamados}" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="6" Padding="10" Margin="0,0,0,10" Background="#F9F9F9">
                                <StackPanel>
                                    <TextBlock Text="{Binding Titulo}" FontWeight="Bold" FontSize="14" />
                                    <TextBlock Text="{Binding Descricao}" FontStyle="Italic" FontSize="12" Foreground="#666" />

                                    <!-- Categoria -->
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📁 " FontSize="12" />
                                        <TextBlock Text="{Binding Categoria}" FontSize="12" Foreground="#444" />
                                    </StackPanel>

                                    <!-- Prioridade com cor -->
                                    <TextBlock Text="{Binding Prioridade}" FontSize="12" FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#888" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Prioridade}" Value="Baixa">
                                                        <Setter Property="Foreground" Value="Green" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Prioridade}" Value="Média">
                                                        <Setter Property="Foreground" Value="Orange" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Prioridade}" Value="Alta">
                                                        <Setter Property="Foreground" Value="Red" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Prioridade}" Value="Urgente">
                                                        <Setter Property="Foreground" Value="DarkRed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- Status -->
                                    <TextBlock Text="{Binding Status}" FontSize="12" Foreground="#888" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>
    </Grid>

</UserControl>
