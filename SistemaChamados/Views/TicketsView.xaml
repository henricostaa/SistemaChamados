<UserControl x:Class="SistemaChamados.Views.TicketsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:SistemaChamados.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="772"
             Style="{StaticResource Page_Style}">

            <UserControl.DataContext>
                <vm:TicketsVM />
            </UserControl.DataContext>


    <Grid Margin="20">
        <!-- 📝 Formulário de Criação -->
        <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20" Margin="10"
                Effect="{StaticResource CardShadow}">
            <StackPanel>
                <TextBlock Text="Criar Novo Ticket" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,20" />


                <StackPanel>
                    <TextBlock Text="Titulo*" FontSize="14" Margin="0,5,0,5"/>
                    <Border CornerRadius="6" BorderBrush="#CE93D8" BorderThickness="1" Background="#F3E5F5">
                        <TextBox Text="{Binding Titulo, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                                 
                                 Height="35"                 
                                 FontSize="14"                  
                                 Padding="8"                 
                                 Background="Transparent"                 
                                 BorderThickness="0"                 
                                 Foreground="#4A148C"                                 
                                 CaretBrush="#4A148C"/>
                    </Border>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Descrição*"  FontSize="14" Margin="0,5,0,5"/>
                    <Border CornerRadius="6" BorderBrush="#CE93D8" BorderThickness="1" Background="#F3E5F5">
                        <TextBox Text="{Binding Descricao, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"                 
                                 Height="100"                 
                                 AcceptsReturn="True" 
                                 TextWrapping="Wrap"
                                 FontSize="14"                  
                                 Padding="8"                 
                                 Background="Transparent"                 
                                 BorderThickness="0"                 
                                 Foreground="#4A148C"                                 
                                 CaretBrush="#4A148C"/>
                    </Border>
                </StackPanel>
                
                <StackPanel>
                    <TextBlock Text="Categoria*" FontSize="14" Margin="0,5,0,5"/>
                    <ComboBox ItemsSource="{Binding Categorias}"
                              SelectedItem="{Binding Categoria, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                              Style="{StaticResource RoundedComboBox}"                   
                              Height="35"       
                              Margin="0,0,0,10"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Prioridade*" FontSize="14" Margin="0,5,0,5"/>
                    <ComboBox ItemsSource="{Binding Prioridades}"
                              SelectedItem="{Binding Prioridade, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                              Style="{StaticResource RoundedComboBox}"
                              Height="35"
                              Margin="0,0,0,10"/>
                </StackPanel>
                

                <Button Content="Criar Ticket"
                        Command="{Binding CriarChamadoCommand}"
                        Width="160" Height="35"
                        Style="{StaticResource ModernLoginButton}"
                        IsDefault="True"
                        Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- 📋 Lista de Tickets Criados
          -->
    </Grid>

</UserControl>
