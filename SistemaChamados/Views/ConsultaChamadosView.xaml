<Window x:Class="SistemaChamados.Views.ConsultaChamadosView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaChamados.Views"
        mc:Ignorable="d"
        Title="ConsultaChamadosView" Height="450" Width="800"
        xmlns:vm="clr-namespace:SistemaChamados.ViewModels">

    <Window.DataContext>
        <vm:ConsultaChamadosViewModel />
    </Window.DataContext>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Width="200" Text="{Binding Filtro}" Margin="0,0,10,0" />
            <Button Content="Atualizar" Command="{Binding AtualizarCommand}" />
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding ChamadosFiltrados}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Usuário" Binding="{Binding Usuario}" Width="*"/>
                <DataGridTextColumn Header="Título" Binding="{Binding Titulo}" Width="*"/>
                <DataGridTextColumn Header="Categoria" Binding="{Binding Categoria}" Width="*"/>
                <DataGridTextColumn Header="Prioridade" Binding="{Binding Prioridade}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
