<UserControl x:Class="SistemaChamados.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:SistemaChamados.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" 
             d:DesignWidth="772"
             Style="{StaticResource Page_Style}">

    <UserControl.DataContext>
        <vm:HomeVM />
    </UserControl.DataContext>

    <UserControl.Resources>
        <!-- Cabeçalho roxo -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6"/>
        </Style>

        <!-- Estilo do item (linha) -->
        <Style x:Key="LinhaListaStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <!-- espaço entre linhas -->
            <Setter Property="Padding" Value="4"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="ClipToBounds" Value="True"/>
        </Style>

        <!-- Remove highlight padrão da ListView para manter aparência "tabela" -->
        <Style TargetType="ListViewItem" x:Key="ListViewItemNoSelection">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <StackPanel Margin="40">
            <!-- Título -->
            <TextBlock Text="📊 Dashboard de Tickets"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,30" />

            <!-- Resumo dos Tickets com Filtros -->
            <UniformGrid Columns="4" Margin="0,0,0,30">
                <!-- Botão Abertos -->
                <Border CornerRadius="16"
                        Padding="20"
                        Margin="10"
                        Background="#6A0DAD"
                        BorderBrush="White"
                        BorderThickness="1"
                        Effect="{StaticResource CardShadow}">

                   
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="Abertos" Foreground="White" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding TotalAbertos}" Foreground="White" FontSize="30" FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    

                </Border>
                

                <!-- Botão Fechados -->
                <Border CornerRadius="16"
                     Padding="20"
                     Margin="10"
                      Background="#6A0DAD"
                      BorderBrush="White"
                      BorderThickness="1"
                     Effect="{StaticResource CardShadow}">
                    

                    
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Fechados" Foreground="White" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding TotalFechados}" Foreground="White" FontSize="30" FontWeight="Bold"
                                    HorizontalAlignment="Center"/>
                    </StackPanel>
                
                </Border>
                
                <!-- Botão Pendentes -->
                <Border CornerRadius="16"
                 Padding="20"
                 Margin="10"
                 Background="#6A0DAD"
                 BorderBrush="White"
                 BorderThickness="1"
                 Effect="{StaticResource CardShadow}">

                    
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Andamento" Foreground="White" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding TotalAndamento}" Foreground="White" FontSize="30" FontWeight="Bold"
                                    HorizontalAlignment="Center"/>
                    </StackPanel>
               
                </Border>

                <!-- Botão Total tickets -->
                <Border CornerRadius="16"
                     Padding="20"
                     Margin="10"
                     Background="#6A0DAD"
                     BorderBrush="White"
                     BorderThickness="1"
                     Effect="{StaticResource CardShadow}">
                   
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Total" Foreground="White" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding TotalChamados}" Foreground="White" FontSize="30" FontWeight="Bold"
                                    HorizontalAlignment="Center"/>
                    </StackPanel>
              
                </Border>
            </UniformGrid>

            <Border Background="#6A0DAD" BorderBrush="White" BorderThickness="1" CornerRadius="4" Padding="6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                        <!-- deixa a resposta ocupar espaço restante -->
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Titulo" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="1" Text="Descrição" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="2" Text="Categoria" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="3" Text="Prioridade" Style="{StaticResource HeaderTextStyle}"/>
                </Grid>
            </Border>

            
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" MaxHeight="220">
                <ListView 
                          ItemsSource="{Binding ChamadosFiltrados}"
                          ItemContainerStyle="{StaticResource ListViewItemNoSelection}"
                          Background="Transparent"
                          Foreground="White"
                          BorderThickness="0"
                          SnapsToDevicePixels="True">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <!-- Cada "linha" é um Border (com estilo) contendo um Grid de 4 colunas -->
                            <Border Style="{StaticResource LinhaListaStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="220"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Ordem -->
                                    <TextBlock Grid.Column="0" Text="{Binding Titulo}" 
                                    HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <!-- Pergunta (wrap) -->
                                    <TextBlock Grid.Column="1" Text="{Binding Descricao}" TextWrapping="Wrap"
                                    VerticalAlignment="Center" HorizontalAlignment="Center" Padding="4"/>

                                    <!-- Resposta (wrap) -->
                                    <TextBlock Grid.Column="2" Text="{Binding Categoria}" TextWrapping="Wrap"
                                    VerticalAlignment="Center" HorizontalAlignment="Center" Padding="4"/>

                                    <!-- Categoria -->
                                    <TextBlock Grid.Column="3" Text="{Binding Prioridade}" 
                                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
           
        </StackPanel>
    </Grid>
</UserControl>